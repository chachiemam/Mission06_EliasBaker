@{
}

@model List<Collection>
<table class="table table-bordered">
    
    <thead class="fw-bold">
        <tr>
			<td>Title</td>
			<td>Year</td>
			<td>Category</td>
			<td>Director</td>
			<td>Rating</td>
			<td>Edited</td>
			<td>Lent To</td>
			<td>Copied to Plex</td>
			<td>Notes</td>
        </tr> 
    </thead>
    
    @foreach (var m in Model)
    {
        <tbody>
            <tr>
				<td>@m.Title</td>
				<td>@m.Year</td>
				<td>@m.CategoryId</td>
				<td>@m.Director</td>
				<td>@m.Rating</td>
				<td>@m.Edited</td>
				<td>@m.LentTo</td>
				<td>@m.CopiedToPlex</td>
				<td>@m.Notes</td>

				<td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@m.MovieId">Edit</a></td>
				<td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id = "@m.MovieId">Delete</a></td>
            </tr>
            
        </tbody>
    }
   

</table>
