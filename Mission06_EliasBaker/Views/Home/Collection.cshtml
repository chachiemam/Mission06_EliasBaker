@model Mission06_EliasBaker.Models.Collection;

<h1>Collection</h1>
<br />
<br />
<form method="post">

    <input type="hidden" asp-for="MovieId" />
    <br />
    <label asp-for="Title">Title: </label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Year">Year: </label>
    <input asp-for="Year" min="1888"/>
    <br />
    @* <label asp-for="CategoryId">Category: </label>
    <select asp-for="CategoryId">
        <option value="1">Miscellaneous</option>
        <option value="2">Drama</option>
        <option value="3">Television</option>
        <option value="4">Horror/Suspense</option>
        <option value="5">Comedy</option>
        <option value="6">Family</option>
        <option value="7">Action/Adventure</option>
        <option value="8">VHS</option>
    </select> 
    <br />*@
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Categories c in ViewBag.Categories)
        {
            <option value = "@c.CategoryId">@c.Category</option>
        }
    </select>
    <br />
    <label asp-for="Director">Director: </label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating: </label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NR">NR</option>
        <option value="UR">UR</option>
        <option value="TV-Y7">TV-Y7</option>
        <option value="TV-G">TV-G</option>
        <option value="TV-PG">TV-PG</option>
        <option value="TV-14">TV-14</option>
    </select>
    <br />
    <label asp-for="Edited">Edited: </label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="CopiedToPlex">Copied to Plex: </label>
    <select asp-for="CopiedToPlex">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent to: </label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="Notes">Notes: </label>
    <input asp-for="Notes" maxlength="25" />

    <button type="submit">Submit Movie</button>

    <div asp-validation-summary="All"></div>
</form>

